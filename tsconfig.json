{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"]
    }
  },
  "include": ["src/**/*", "src/types/**/*"]
}
